<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailKendaraan">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/headtoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1F271B"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Detail Kendaraan"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="#1F271B"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Nomor Plat"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/nomorplat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="TextView"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Merk"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/merk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="TextView"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Tipe"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="TextView"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Jenis"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/jenis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="TextView"/>
        </LinearLayout>

        <Button
            android:id="@+id/batal"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:backgroundTint="#FF1100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hapus Kendaraan"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>