<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TambahKendaraan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Kendaran"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/merk"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Merk Kendaraan"
            android:inputType="text"
            />

        <EditText
            android:id="@+id/model"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Model Kendaraan"
            android:inputType="text"
            />
        <EditText
            android:id="@+id/plat"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Plat Nomor"
            android:inputType="text"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Kendaraan"
            android:layout_marginLeft="50dp"
            android:textSize="18dp"/>
        <RadioGroup
            android:id="@+id/jenis"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RadioButton
                android:clickable="true"
                android:id="@+id/btnmotor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Motor"
               />
            <RadioButton
                android:id="@+id/btnmobil"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobil"
                android:clickable="true"
                />
        </RadioGroup>

        <Button
            android:id="@+id/submit"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:onClick="Kirim"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>